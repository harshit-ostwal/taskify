generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @unique @default(uuid())
  avatar          String
  name            String
  email           String
  type            Type
  tasks           Task[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@unique([email, type])
}

model Task {
  id          String   @id @unique @default(uuid())
  title       String
  description String
  status      Status
  User        User?    @relation(fields: [userId], references: [id])
  userId      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Type {
  github
  google
}

enum Status {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}
